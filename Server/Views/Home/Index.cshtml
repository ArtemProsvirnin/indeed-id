@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h2>Управление запросами</h2>
        <div class="tasks-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Description</th>
                        <th scope="col">TimeSpent</th>
                        <th scope="col">Handler</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <button class="btn btn-success" data-toggle="modal" data-target="#taskModal">Добавить</button>
        <div class="modal fade" id="taskModal" tabindex="-1" role="dialog" aria-labelledby="taskModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="taskModalLabel">Создать новый запрос</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="task-description" class="control-label">Описание:</label>
                                <textarea class="form-control" id="task-description"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                        <button type="button" class="btn btn-primary add-task" data-dismiss="modal">Создать</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <h2>Управление сотрудниками</h2>
        <div class="employees-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <button class="btn btn-success" data-toggle="modal" data-target="#employeeModal">Добавить</button>
        <div class="modal fade" id="employeeModal" tabindex="-1" role="dialog" aria-labelledby="employeeModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="employeeModalLabel">Создать нового сотрудника</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="employee-name" class="control-label">Name:</label>
                                <input type="text" class="form-control" id="employee-name">
                            </div>
                        </form>
                        <div class="form-group">
                            <label for="employee-position">Должность:</label>
                            <select class="form-control" id="employee-position">
                                <option value="Operator">Оператор</option>
                                <option value="Manager">Менеджер</option>
                                <option value="Director">Директор</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                        <button type="button" class="btn btn-primary add-employee" data-dismiss="modal">Создать</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <h2>Конфигурация</h2>
        <form>
            <div class="form-group">
                <label for="rangeMin" class="control-label">Нижняя граница времени:</label>
                <input type="number" class="form-control" id="rangeMin" min="0">
            </div>
            <div class="form-group">
                <label for="rangeMax" class="control-label">MaxRange:</label>
                <input type="number" class="form-control" id="rangeMax" min="0">
            </div>
            <div class="form-group">
                <label for="tm" class="control-label">Tm:</label>
                <input type="number" class="form-control" id="tm" min="0">
            </div>
            <div class="form-group">
                <label for="td" class="control-label">Td:</label>
                <input type="number" class="form-control" id="td" min="0">
            </div>
        </form>
        <button class="btn btn-success update-configuration">Обновить</button>
    </div>
</div>

@section scripts
{
    <script src="../../Scripts/app.js"></script>
}